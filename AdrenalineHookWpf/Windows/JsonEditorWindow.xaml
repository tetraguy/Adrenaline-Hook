<Window x:Class="AdrenalineHookWpf.Windows.JsonEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application Database Editor" Width="760" Height="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding PathText}" Foreground="#FF666666" Margin="0,0,0,8"/>

        <TextBox x:Name="Editor" Grid.Row="1" FontFamily="Consolas" FontSize="12"
                 AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Reload" Width="110" Click="Reload_Click"/>
            <Button Content="Save" Width="110" Margin="10,0,0,0" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
