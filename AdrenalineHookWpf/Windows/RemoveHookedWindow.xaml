<Window x:Class="AdrenalineHookWpf.Windows.RemoveHookedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select the Application(s) to Un-Hook" Width="560" Height="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="Grid" ItemsSource="{Binding Items}" CanUserAddRows="False" IsReadOnly="False" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding IsChecked, Mode=TwoWay}" Width="42" />
                <DataGridTextColumn Header="Application Name" Binding="{Binding Title}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="110" Click="Cancel_Click"/>
            <Button Content="Un-Hook Selection(s)" Width="180" Margin="10,0,0,0" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
